{
  "name": "blueprint-lsp-server",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Blueprint DSL",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run compile && cp ../tree-sitter-blueprint/tree-sitter-blueprint.wasm ./dist",
    "compile": "bun build --outfile=./dist/server --compile --minify --sourcemap --bytecode ./src/index.ts",
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --watch --inspect=6009 src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist",
    "bench": "bun run benchmarks/parsing.bench.ts",
    "bench:workspace": "bun run benchmarks/workspace-indexing.bench.ts",
    "bench:hover": "bun run benchmarks/hover.bench.ts",
    "bench:memory": "bun --expose-gc run benchmarks/memory.bench.ts",
    "bench:all": "bun run bench && bun run bench:workspace && bun run bench:hover && bun run bench:memory"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "valibot": "^1.2.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "web-tree-sitter": "^0.26.3",
    "typescript": "^5"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "blueprint-lsp-server": "./dist/server"
  }
}
