{
  "name": "blueprint-lsp-client",
  "displayName": "Blueprint DSL",
  "description": "Language support for Blueprint DSL - a human-authored requirements language for coding agents",
  "version": "0.1.0",
  "publisher": "blueprint",
  "license": "MIT",
  "private": true,
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:blueprint"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "blueprint",
        "aliases": [
          "Blueprint",
          "blueprint"
        ],
        "extensions": [
          ".bp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "blueprint",
        "scopeName": "source.blueprint",
        "path": "./syntaxes/blueprint.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blueprint",
      "properties": {
        "blueprint.ticketsPath": {
          "scope": "resource",
          "type": "string",
          "default": ".blueprint/tickets",
          "description": "Path to the tickets directory relative to the workspace root"
        },
        "blueprint.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Blueprint language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "bun test"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
