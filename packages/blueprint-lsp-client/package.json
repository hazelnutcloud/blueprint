{
  "name": "blueprint-lsp-client",
  "displayName": "Blueprint DSL",
  "description": "Language support for Blueprint DSL - a human-authored requirements language for coding agents",
  "version": "0.1.0",
  "publisher": "blueprint",
  "license": "MIT",
  "private": true,
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:blueprint"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "blueprint",
        "aliases": [
          "Blueprint",
          "blueprint"
        ],
        "extensions": [
          ".bp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "blueprint",
        "scopeName": "source.blueprint",
        "path": "./syntaxes/blueprint.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Blueprint",
      "properties": {
        "blueprint.ticketsPath": {
          "scope": "resource",
          "type": "string",
          "default": ".blueprint/tickets",
          "description": "Path to the tickets directory relative to the workspace root"
        },
        "blueprint.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Blueprint language server"
        },
        "blueprint.highlighting.complete": {
          "scope": "window",
          "type": "string",
          "default": "#2d5a27",
          "description": "Color for completed requirements (green)"
        },
        "blueprint.highlighting.inProgress": {
          "scope": "window",
          "type": "string",
          "default": "#8a6d3b",
          "description": "Color for in-progress requirements (amber)"
        },
        "blueprint.highlighting.blocked": {
          "scope": "window",
          "type": "string",
          "default": "#a94442",
          "description": "Color for blocked requirements (red)"
        },
        "blueprint.highlighting.noTicket": {
          "scope": "window",
          "type": "string",
          "default": "#6c757d",
          "description": "Color for requirements without tickets (gray)"
        },
        "blueprint.highlighting.obsolete": {
          "scope": "window",
          "type": "string",
          "default": "#868e96",
          "description": "Color for obsolete requirements (gray with strikethrough)"
        },
        "blueprint.gotoModifier": {
          "scope": "window",
          "type": "string",
          "enum": [
            "alt",
            "ctrlCmd"
          ],
          "default": "alt",
          "markdownDescription": "Modifier key for Ctrl/Cmd+Click to go to definition. When set to `alt`, use Alt+Click for go-to-definition (Ctrl/Cmd+Click adds cursors). When set to `ctrlCmd`, use Ctrl/Cmd+Click for go-to-definition (Alt+Click adds cursors). See [SPEC.md Section 5.9](https://github.com/blueprintlang/blueprint/blob/main/SPEC.md#59-configuration) and [VS Code multi-cursor documentation](https://code.visualstudio.com/docs/editor/codebasics#_multicursor-modifier)."
        },
        "blueprint.showProgressInGutter": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Show progress icons in the editor gutter for requirements. Icons indicate completion status: checkmark for complete, spinner for in-progress, blocked icon for blocked requirements, etc."
        },
        "blueprint.showProgressHighlighting": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Highlight requirement lines with background colors based on their status. Per [SPEC.md Section 5.4](https://github.com/blueprintlang/blueprint/blob/main/SPEC.md#54-progress-highlighting): green for complete, amber for in-progress, red for blocked, gray for no-ticket, and strikethrough for obsolete."
        },
        "blueprint.hoverDelay": {
          "scope": "language-overridable",
          "type": "number",
          "default": 300,
          "minimum": 0,
          "maximum": 10000,
          "description": "Delay in milliseconds after which the hover is shown for Blueprint files"
        }
      }
    },
    "semanticTokenModifiers": [
      {
        "id": "noTicket",
        "description": "Requirement has no associated ticket"
      },
      {
        "id": "blocked",
        "description": "Requirement is blocked by incomplete dependencies"
      },
      {
        "id": "inProgress",
        "description": "Requirement is being actively worked on"
      },
      {
        "id": "complete",
        "description": "Requirement has been fully implemented"
      },
      {
        "id": "obsolete",
        "description": "Requirement has been removed or is no longer relevant"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "blueprint",
        "scopes": {
          "*.noTicket": [
            "markup.faded",
            "comment.block"
          ],
          "*.blocked": [
            "invalid.illegal",
            "markup.deleted"
          ],
          "*.inProgress": [
            "markup.changed",
            "entity.name.tag"
          ],
          "*.complete": [
            "string",
            "markup.inserted"
          ],
          "*.obsolete": [
            "comment.line",
            "markup.strikethrough"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "[blueprint]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.multiCursorModifier": "ctrlCmd",
        "editor.hover.delay": 300
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "*.noTicket:blueprint": {
            "foreground": "#6c757d",
            "fontStyle": "italic"
          },
          "*.blocked:blueprint": {
            "foreground": "#a94442",
            "fontStyle": "underline"
          },
          "*.inProgress:blueprint": {
            "foreground": "#8a6d3b"
          },
          "*.complete:blueprint": {
            "foreground": "#2d5a27"
          },
          "*.obsolete:blueprint": {
            "foreground": "#868e96",
            "fontStyle": "strikethrough"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "compile:tests": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "bun run compile && bun run compile:tests",
    "test": "node ./out/tests/runTests.js",
    "test:unit": "bun test",
    "package": "bunx @vscode/vsce package --no-dependencies",
    "package:ls": "bunx @vscode/vsce ls --no-dependencies"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.85.0",
    "@types/bun": "latest",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.7.3"
  }
}
