{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-server",
      "type": "shell",
      "command": "bun",
      "args": ["run", "typecheck"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "build-client",
      "type": "shell",
      "command": "bun",
      "args": ["run", "tsc", "--noEmit"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-client"
      },
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "build-all",
      "dependsOn": ["build-server", "build-client"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "watch-server-typecheck",
      "type": "shell",
      "command": "bun",
      "args": ["run", "typecheck:watch"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "watch-server",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[.*\\] Reloading",
          "endsPattern": "^\\[.*\\] (Reloaded|Watching)"
        }
      }
    },
    {
      "label": "watch-server-debug",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev:debug"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[.*\\] Reloading",
          "endsPattern": "^\\[.*\\] (Reloaded|Watching)"
        }
      }
    },
    {
      "label": "watch-tests",
      "type": "shell",
      "command": "bun",
      "args": ["run", "test:watch"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "isBackground": true,
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "test-server",
      "type": "shell",
      "command": "bun",
      "args": ["run", "test"],
      "options": {
        "cwd": "${workspaceFolder}/packages/blueprint-lsp-server"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "generate-tree-sitter",
      "type": "shell",
      "command": "bunx",
      "args": ["tree-sitter", "generate"],
      "options": {
        "cwd": "${workspaceFolder}/packages/tree-sitter-blueprint"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "test-tree-sitter",
      "type": "shell",
      "command": "bunx",
      "args": ["tree-sitter", "test"],
      "options": {
        "cwd": "${workspaceFolder}/packages/tree-sitter-blueprint"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "dev",
      "dependsOn": ["watch-server", "watch-server-typecheck"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
